# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space

# 4 space indentation
[*.{java,yml,sh,xml}]
indent_size = 4

# 2 space indentation
[*.{json,scala}]
indent_size = 2
